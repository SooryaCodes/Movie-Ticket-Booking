          <img src="/images/admin/edit-2.svg" alt="" />
        </a>
        <a onclick="getDeleteWrapper('{{this.Title}}')">
          <img src="/images/admin/trash (1).svg" alt="" />
        </a>
        <a title="Add TO Now Showing" onclick="changeMovieToNowShowing('{{this._id}}')">
