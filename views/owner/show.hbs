<script>
  function deleteShow(Id) {
    var confirmDelete = confirm('Are You Sure Want To Delete')
    if (confirmDelete) {
      $.ajax({
        url: '/owner/delete-show/' + Id,
        data: Id,
        method: 'post',
        success: (response) => {

          console.log(response.status)
          if (response.status) {
            setTimeout(function () {
              location.reload()
            }, 2000)

            console.log('delete')

          }
        }
      })
    }
  }
</script>
