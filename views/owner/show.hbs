      </td>
      <td>
        <a href="/owner/edit-show/{{this._id}}">
          <img src="/images/admin/edit-2.svg" alt="" />
        </a>
        <a onclick="getDeleteWrapper('Show')">
          <img src="/images/admin/trash (1).svg" alt="" />
        </a>
      </td>

      {{!--delete popup--}}
      <div class="delete-wrapper">
        <div class="delete">
          <span id="delete">Delete This.Png ?</span>
          <p>This will permanently delete the image from your image library. You will not be able to undo this action.
          </p>
          <div class="inputs-btn">
            <button class="mask waves-effect waves-light rgba-white-slight" onclick="closeDelet()">Cancel</button>
            <button class="mask waves-effect waves-light rgba-white-slight"
              onclick="deleteShow('{{this._id}}')">Delete</button>
          </div>
        </div>
      </div>
    </tr>
    {{/each}}
  </table>
</div>



<script>
    const closeDelet = () => {
    var wrapper = document.querySelector('.delete-wrapper')
    wrapper.classList.remove('active')
  }
   function getDeleteWrapper(Name) {
    var Delspan = document.getElementById('delete')
    Delspan.innerText = `Delete ${Name} ?`

    var wrapper = document.querySelector('.delete-wrapper')
    wrapper.classList.toggle('active')
  }
  function deleteShow(Id) {
      $.ajax({
        url: '/owner/delete-show/' + Id,
        data: Id,
        method: 'post',
        success: (response) => {

          console.log(response.status)
          if (response.status) {
                      wrapper.classList.remove('active')

              location.reload()

            console.log('delete')

          }
        }
      })
    }
  
</script>
