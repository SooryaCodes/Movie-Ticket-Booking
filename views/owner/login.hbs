      0px 0px 4px rgba(255, 255, 255, .2);
  }

  .wrapper #btn:active {
    box-shadow:
      inset 7px 7px 15px rgba(79, 80, 85, 0.15),
      inset -7px -7px 20px rgba(255, 255, 255, 1),
      0px 0px 4px rgba(255, 255, 255, 0.514);
  }

