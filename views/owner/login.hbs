    left: 50%;
  }

  .wrapper form {
    background: #efeeee;
    height: 600px;
    width: 390px;
    border-radius: 20px;
    box-shadow:
      10px 10px 16px -2px #ccc,
      -10px -10px 16px -2px #fff;
    text-align: center;
    padding: 2em;
  }

  .wrapper p {
    padding: 20px;
    color: #777;
    margin-bottom: 2em;
    font-size: 24px;
