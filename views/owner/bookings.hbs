      </div>

      <div class="boxes">
        <div class="text">
          <p>Bookings</p>
          <span class="box-data"></span>
        </div>
        <div class="progress" style="height: 10px; width: 90%; ">

          <div style="background:#ff5e46!important;width: 25%" class="progress-bar bg-danger" role="progressbar"
            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>

        </div>
      </div>
    </div>
  </div>
</div>


<!-- table -->


<!--table -->
<div class="owner-table">
  <div class="table-title">
    <p>Bookings</p>
    <div class="movie">


    </div>
  </div>
  <table>

    <tr>

      <th class="no">
        No
      </th>
      <th>
        Movie
      </th>
      <th>
        Screen
      </th>
      <th>
        Show
      </th>
      <th>
        Seats
      </th>
      <th>
        Payment
      </th>
      <th>
        Status
      </th>
      <th>
        Amount
      </th>


    </tr>
    {{#each Bookings}}
    <tr>
      <td id="row">

      </td>
      <td>
        {{this.MovieDetails.Title}}
      </td>
      <td>
        {{this.Show.screenName}}
      </td>
      <td>{{this.ShowDetails.Date}} | {{this.ShowDetails.Time}}</td>
      <td>
        <button class="btn  " style="background-color: rgb(235, 118, 118);color: white;" onclick="displaySeats('{{this._id}}')">Show</button>
      </td>
      <td>
        {{this.Payment}}
      </td>
      <td>
        {{#if this.Paid}}
        <div class="status-a"></div>
        {{else}}
        <div class="status-h"></div>
        {{/if}}
        {{this.Payment_Status}}
      </td>
      <td> â‚¹ {{this.Amount}}</td>




      {{!--delete popup--}}
      <div class="delete-wrapper" id="{{this._id}}">
        <div class="delete">
          <span id="delete">Seats</span>
          <div style="display: flex;align-items: center;">
            {{#each this.Seat}}
            <p style="font-weight: 600; ">
              {{this}}
            </p> <span style="font-size: 20px;">,</span>
            {{/each}}
          </div>
          <div class="inputs-btn">
            <button class="mask waves-effect waves-light rgba-white-slight" hidden>Cancel</button>
            <button class="mask waves-effect waves-light rgba-white-slight"
              onclick="closeSeats('{{this._id}}')">Close</button>
          </div>
        </div>
      </div>


    </tr>
    {{/each}}
  </table>
</div>

