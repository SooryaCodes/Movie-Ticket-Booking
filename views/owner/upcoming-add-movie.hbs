{{!-- loader --}}


<div class="loader active">
  <div class="sk-cube-grid">
    <div class="sk-cube sk-cube1"></div>
    <div class="sk-cube sk-cube2"></div>
    <div class="sk-cube sk-cube3"></div>
    <div class="sk-cube sk-cube4"></div>
    <div class="sk-cube sk-cube5"></div>
    <div class="sk-cube sk-cube6"></div>
    <div class="sk-cube sk-cube7"></div>
    <div class="sk-cube sk-cube8"></div>
    <div class="sk-cube sk-cube9"></div>
  </div>
</div>

<div class="add-movie">
  <form action="/owner/add-upcoming-movie" method="POST">
      <div class="input-title">
          <p>Add Movie</p>
      </div>
    <div class="input-groups">
      <input required type="text" name="Title" placeholder="Title" id="" />
    </div>
    <div class="input-groups">
      <input required type="text" name="Cast" placeholder="Cast" id="" />
    </div>
    <div class="input-groups">
      <input required type="text" name="Director" placeholder="Director" id="" />
    </div>
            <div class="input-groups">
      <input required type="text" name="Description" placeholder="Description" id="" />
    </div>
            <div class="input-groups">
      <input required type="text" name="Image" placeholder="Wide Image Address" id="" />
    </div>
    <div class="input-groups">
      <label for="">Release Date</label>
      <input required type="date" name="Date" placeholder="Release Date" id="" />
    </div>


    <div class="input-groups">
        <select name="Category" id="">
            <option value="Category">Category</option>
            <option value="Horror">Horror</option>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Romance">Romance</option>
        </select>
    </div>
    <div class="input-groups">
      <input required type="text" name="Trailer" placeholder="Trailer" id="" />
    </div>
    <div class="input-groups">
<label for="">Runtime</label>
      <input required type="time" name="Runtime" placeholder="Minutes" id="" />
    </div>
    <div class="input-button">
        <button class="btn btn-mdb-color" type="submit">Next</button>
    </div>
  </form>
</div>
  <script>
  var loader = document.querySelector('.loader')
  setTimeout(function () {

    loader.classList.remove('active')
  }, 2000)  </script>