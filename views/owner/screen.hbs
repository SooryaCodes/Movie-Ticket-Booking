          {{this.Seat}}
        </td>
        <td>
          <a href="/owner/screen/schedule" class="btn btn-mdb-color">
            View
          </a>
        </td>
        <td>
          <a href="/owner/edit-screen/{{this._id}}">
            <img src="/images/admin/edit-2.svg" alt="" />
          </a>
          <a onclick="deletScreen('{{this._id}}')">
            <img src="/images/admin/trash (1).svg" alt="" />
          </a>
        </td>
      </tr>
    {{/each}}
  </table>
