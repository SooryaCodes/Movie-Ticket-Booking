      href="/owner/add-screen"
      id="add-btn"
      onclick="addToggle()"
      class="btn btn-elegant"
    >
      Add Screen
    </a>
  </div>
  <table>
    <tr>
      <th class="no">
        No
      </th>
      <th>
        Name
      </th>
      <th>
        Seats
      </th>
      <th>
        Schedule
      </th>
      <th>
        Action
      </th>
    </tr>
    {{#each Screen}}
      <tr>
        <td id="row"></td>
        <td>
          {{this.Name}}
          <!-- <img src="/images/owner/profile/owner{{this._id}}.jpg" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%; margin-right: 5px;" alt=""> {{this.Name}} -->
